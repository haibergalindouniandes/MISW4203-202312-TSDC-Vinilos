<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.AlbumsFragment">


    <ImageView
        android:id="@+id/albumImage"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="50dp"
        android:contentDescription="@string/picture_of_the_album"
        android:scaleType="fitXY"
        android:src="@drawable/photo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="225dp"
        android:layout_marginStart="5dp"
        android:text="@string/release_date_album"
        android:textSize="30sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="260dp"
        android:text="@string/album_release_date"
        android:textSize="100sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="300dp"
        android:layout_marginStart="5dp"
        android:text="@string/album_description_tittle"
        android:textSize="30sp" />

    <TextView
        android:layout_width="406dp"
        android:layout_height="109dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="345dp"
        android:text="@string/album_description"
        android:textSize="30sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="450dp"
        android:layout_marginStart="5dp"
        android:text="@string/album_genre_tittle"
        android:textSize="30sp" />

    <TextView
        android:layout_width="406dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="495dp"
        android:text="@string/album_genre"
        android:textSize="30sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="535dp"
        android:layout_marginStart="5dp"
        android:text="@string/album_artist_tittle"
        android:textSize="30sp" />

    <TextView
        android:layout_width="406dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="575dp"
        android:text="@string/album_artist"
        android:textSize="30sp" />

    <data>
        <variable
            name="albums"
            type="com.example.tsdc_vinilos_equipo6.models.Album" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginBottom="5dip"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:strokeColor="@color/ButtonBlue"
            app:strokeWidth="1dp">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/AlbumCover"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_rowSpan="2"
                    android:contentDescription="@string/picture_of_the_album"
                    android:scaleType="fitXY"
                    android:src="@drawable/photo" />

                <TextView
                    android:id="@+id/AlbumName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:layout_marginBottom="5dip"
                    android:layout_marginStart="5dip"
                    android:text="@{albums.name}"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/AlbumPerformer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="1"
                    android:layout_column="1"
                    android:layout_marginStart="10dip"
                    android:textSize="15sp" />

            </GridLayout>
        </com.google.android.material.card.MaterialCardView>
    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>